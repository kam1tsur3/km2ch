doctype html
htll(lang="ja")
	head
		meta(charset="UTF-8")
		title secret-board
	body
		h1 Secret Board
		a(href="/logout") Logout
		h2 New Post
		form(method="post" action="/posts")
			div
				textarea(name="content" cols=40 rows=4)
			div
				button(type="submit") Post
		h2 All posts
		each post in posts
			- var isPostedByAdmin = (post.postedBy === 'admin')
			if isPostedByAdmin
				h3 #{post.id} : Admin *
			else
				h3 #{post.id} : ID:#{post.trackingCookie}
			p!= post.content	
			p Date: #{post.createdAt}
			- var isAdmin = (user === 'admin')
			if isAdmin
				p Posted by: #{post.postedBy}
			- var isDeletable = (user === post.postedBy || isAdmin)
			if isDeletable
				form(method="post" action="/posts?delete=1")
					input(type="hidden" name="id" value=post.id)
					button(type="submit") Delete
			hr
